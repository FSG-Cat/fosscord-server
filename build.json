{
	"compiler": "tsc",
	"paths": {
		"@fosscord/api": "api/index",
		"@fosscord/gateway": "gateway/index",
		"@fosscord/cdn": "cdn/index",
		"@fosscord/util": "util/index"
	},
	"verbose": true,
	"writeBuildLog": true,
	"writeAnsiBuildLog": true,
	"logErrors": true,
	"tsc": {
		"prettyErrors": true
	},
	"clean": true,
	"quiet": false,
	"steps": {
		"pre": ["clean", "plugin_prepare"],
		"post": ["plugin_resources", "remap_imports"]
	}
}
